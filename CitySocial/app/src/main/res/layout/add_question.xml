<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/half_black">


    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"

        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Write your question"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            android:textSize="34sp"
            app:baseColor="@android:color/white"
            app:floatingLabel="highlight"

            app:primaryColor="?colorAccent"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="199dp"
            android:id="@+id/view" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/button_block"
            flatui:fl_theme="@array/sky"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Send"
            android:layout_marginTop="49dp"
            android:onClick="onQuestionClicked"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_touchEffect="fl_ripple"

            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

</LinearLayout>

        </RelativeLayout>
</RelativeLayout>
